<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivFirstIntro"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"

        android:src="@drawable/img_onboard_customize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/tvSecondIntroTitle"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_intro_title"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFirstIntro"
        tools:ignore="HardcodedText" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/tvSecondIntroTitle"
        app:layout_constraintStart_toStartOf="@id/tvSecondIntroTitle"
        android:text="@string/second_intro_description"
        android:paddingEnd="@dimen/_44sdp"

        android:lines="2"
        android:layout_marginTop="@dimen/_6sdp"
        android:id="@+id/tvSecondIntroDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>