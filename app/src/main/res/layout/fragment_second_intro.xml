<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivFirstIntro"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"

        android:src="@drawable/img_onboard_customize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvSecondIntroTitle"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_intro_title"
        android:textSize="@dimen/_18ssp"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFirstIntro"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvSecondIntroDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:fontFamily="@font/inter"
        android:maxLines="2"
        android:paddingTop="@dimen/_4sdp"
        android:text="@string/second_intro_description"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSecondIntroTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>